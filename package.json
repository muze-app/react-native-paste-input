{
  "name": "@mattermost/react-native-paste-input",
  "version": "0.3.8",
  "description": "React Native TextInput replacement to allow pasting files",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-paste-input.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!example",
    "!.vscode",
    "!**/.idea",
    "!**/.gradle",
    "!android/build",
    "!ios/Build",
    ".circleci"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "cd example && npm",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "npx --no-install husky install && npm run example i && npm run pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "paste",
    "text-input"
  ],
  "repository": "https://github.com/mattermost/react-native-paste-input",
  "author": "Elias Nahum <nahumhbl@gmail.com> (https://github.com/mattermost)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattermost/react-native-paste-input/issues"
  },
  "homepage": "https://github.com/mattermost/react-native-paste-input#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "15.0.0",
    "@react-native-community/bob": "0.17.1",
    "@react-native-community/eslint-config": "3.0.1",
    "@release-it/conventional-changelog": "3.3.0",
    "@types/jest": "27.0.3",
    "@types/react": "17.0.37",
    "@types/react-native": "0.66.8",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "commitlint": "15.0.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "pod-install": "0.1.29",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-native": "0.66.3",
    "release-it": "14.11.8",
    "typescript": "4.5.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 4,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
